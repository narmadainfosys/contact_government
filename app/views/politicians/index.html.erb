<p id="notice"><%= notice %></p>

<h1>Listing Politicians</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Mobile</th>
      <th>Twitter</th>
      <th>Political party</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @politicians.each do |politician| %>
      <tr>
        <td><%= politician.full_name %></td>
        <td><%= politician.mobile %></td>
        <td><%= politician.twitter %></td>
        <td><%= politician.political_party %></td>
        <td><%= link_to 'Show', politician %></td>
        <td><%= link_to 'Edit', edit_politician_path(politician) %></td>
        <td><%= link_to 'Destroy', politician, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <%= link_to "Send Tweet", "#" %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

